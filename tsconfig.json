{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "buildOnSave": false,
    "compileOnSave": true,
    "exclude": [
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./index.ts",
        "./public/**/*.ts",
        "./typings/main.d.ts"
    ],
    "files": [
        "./index.ts",
        "./public/ts/components/app.ts",
        "./public/ts/components/article-summary.ts",
        "./typings/main.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
